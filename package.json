{
  "name": "infliq-backend",
  "version": "1.0.0",
  "description": "INFLIQ Backend Microservices",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:post\" \"npm run dev:feed\" \"npm run dev:chat\" \"npm run dev:call\" \"npm run dev:media\"",
    "dev:gateway": "cd services/api-gateway && nodemon index.js",
    "dev:auth": "cd services/auth-service && nodemon index.js",
    "dev:user": "cd services/user-service && nodemon index.js",
    "dev:post": "cd services/post-service && nodemon index.js",
    "dev:feed": "cd services/feed-service && nodemon index.js",
    "dev:chat": "cd services/chat-service && nodemon index.js",
    "dev:call": "cd services/call-service && nodemon index.js",
    "dev:media": "cd services/media-service && nodemon index.js",
    "start": "node server.js",
    "start:gateway": "node services/api-gateway/index.js",
    "test:smoke": "node scripts/smoke-test.js",
    "test:contracts": "node scripts/contract-test.js",
    "micro:up": "docker compose up -d --build",
    "micro:down": "docker compose down"
  },
  "keywords": [
    "infliq",
    "social",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "aws-sdk": "^2.1500.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.6.0",
    "twilio": "^4.19.0",
    "twilio-video": "^2.34.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
